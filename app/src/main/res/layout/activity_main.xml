<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tugbacevizci.currency.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Döviz Türü"
        android:id="@+id/dovizTuru_textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Satış"
        android:id="@+id/satis_textView"
        android:layout_alignTop="@+id/dovizTuru_textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Alış"
        android:id="@+id/alis_textView"
        android:layout_alignTop="@+id/satis_textView"
        android:layout_toLeftOf="@+id/satis_textView"
        android:layout_toStartOf="@+id/satis_textView"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="USD"
        android:id="@+id/usd_textView"
        android:layout_below="@+id/dovizTuru_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="EURO"
        android:id="@+id/euro_textView"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/usd_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Altın"
        android:id="@+id/altin_textView"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/euro_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/euro_textView"
        android:layout_alignLeft="@+id/alis_textView"
        android:layout_alignStart="@+id/alis_textView"
        android:id="@+id/alis_dolar_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alis_euro_editText"
        android:layout_above="@+id/altin_textView"
        android:layout_alignLeft="@+id/alis_dolar_editText"
        android:layout_alignStart="@+id/alis_dolar_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alis_gold_editText"
        android:layout_alignBottom="@+id/altin_textView"
        android:layout_alignLeft="@+id/alis_euro_editText"
        android:layout_alignStart="@+id/alis_euro_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/satis_dolar_editText"
        android:layout_alignTop="@+id/alis_dolar_editText"
        android:layout_toRightOf="@+id/alis_textView"
        android:layout_toEndOf="@+id/alis_textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/satis_euro_editText"
        android:layout_alignTop="@+id/alis_euro_editText"
        android:layout_toRightOf="@+id/alis_textView"
        android:layout_toEndOf="@+id/alis_textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/satis_gold_editText"
        android:layout_alignBottom="@+id/altin_textView"
        android:layout_toRightOf="@+id/alis_textView"
        android:layout_toEndOf="@+id/alis_textView" />

</RelativeLayout>
